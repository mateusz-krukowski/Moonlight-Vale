<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RollForward>Major</RollForward>
    <PublishReadyToRun>false</PublishReadyToRun>
    <TieredCompilation>false</TieredCompilation>
  </PropertyGroup>
  
  <PropertyGroup>
    <ApplicationIcon>$(MSBuildProjectDirectory)\source\Content\Icons\icon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="$(MSBuildProjectDirectory)\source\Content\Icons\Icon.ico">
      <LogicalName>Icon.ico</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="$(MSBuildProjectDirectory)\source\Content\Icons\Icon.bmp">
      <LogicalName>Icon.bmp</LogicalName>
    </EmbeddedResource>
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.2.1105" />
    <PackageReference Include="MonoGame.Content.Builder.Task" Version="3.8.2.1105" />
    <PackageReference Include="Myra" Version="1.5.9"/>
    <PackageReference Include="FontStashSharp.MonoGame" Version="1.3.9"/>
  </ItemGroup>

  <ItemGroup>
    <None Remove="$(MSBuildProjectDirectory)\source\Content\Content.mgcb" />
    <Resource Include="$(MSBuildProjectDirectory)\source\Content\Content.mgcb" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="$(MSBuildProjectDirectory)\source\Content\Icons\" />
  </ItemGroup>
  
</Project>